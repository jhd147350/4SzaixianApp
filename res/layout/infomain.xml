<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/info_title_back"
        style="@style/tv_back"
        android:layout_width="wrap_content"
        android:text="我的资讯" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/zixun_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wodedingdan_tab_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="全部" />

        <TextView
            android:id="@+id/zixun_bx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wodedingdan_tab_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="保险" />

        <TextView
            android:id="@+id/zixun_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wodedingdan_tab_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="新闻" />

        <TextView
            android:id="@+id/zixun_cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wodedingdan_tab_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="爱车" />

        <TextView
            android:id="@+id/zixun_hangye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wodedingdan_tab_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="行业" />
    </LinearLayout>

   
    <ListView
        android:id="@+id/info_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>