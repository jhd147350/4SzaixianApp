<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff" >

        <TextView
            android:id="@+id/mc_btn_share"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="分享"
            android:textColor="@color/text"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/mc_btn_back"
            style="@style/tv_back"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="个人中心" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/mc_img_bdwx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/touxiang" />

        <Button
            android:id="@+id/mc_btn_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_usual_selector"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="您未登录"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/mycenter_shop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/wode4sdian"
                android:gravity="center"
                android:onClick="onClick"
                android:text="我的4S店"
                android:textSize="17sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#f4f4f4" />

            <TextView
                android:id="@+id/mycenter_quan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/wodejuan"
                android:gravity="center"
                android:onClick="onClick"
                android:text="我的券"
                android:textSize="17sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f4f4f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/mycenter_car"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/wodeaiche"
                android:gravity="center"
                android:onClick="onClick"
                android:text="我的爱车"
                android:textSize="17sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#f4f4f4" />

            <TextView
                android:id="@+id/mycenter_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/wodexiaoxi"
                android:gravity="center"
                android:onClick="onClick"
                android:text="我的消息"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:padding="10dp"
        android:text="设置"
        android:onClick="onClick"
        android:id="@+id/setting"
        android:textColor="#000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f4f4f4" />

    <TextView
         android:clickable="true"
        android:onClick="onClick"
        android:id="@+id/mycentre_xingchejilu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:padding="10dp"
        android:text="我的行车记录"
        android:textColor="#000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f4f4f4" />

    <TextView
        android:clickable="true"
        android:onClick="onClick"
        android:id="@+id/mycentre_kefu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:padding="10dp"
        android:text="客服"
        android:textColor="#000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f4f4f4" />

    <TextView
        android:id="@+id/mycentre_guanyu"
        android:clickable="true"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:padding="10dp"
        android:text="关于"
        android:textColor="#000"
        android:textSize="18sp" />

</LinearLayout>